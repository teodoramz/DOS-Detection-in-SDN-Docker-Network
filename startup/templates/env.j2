#-------------------------------
# Prerequirements for ips and ports for services
#-------------------------------
KAFKA_SW5_IP={{ kafka_sw5_ip }}
KAFKA_LISTENERS_IP=0.0.0.0

MINIO_SW5_IP={{ minio_sw5_ip }}


# KAFKA ENV
KAFKA_IMAGE=confluentinc/cp-kafka
KAFKA_IMAGE_TAG=7.8.0
KAFKA_RESTART_POLICY=always
KAFKA_HOSTNAME=kafka
KAFKA_CONTAINER_NAME=kafka
KAFKA_WORKERS_PORT=9092
KAFKA_INTERNAL_PORT=9093
KAFKA_KRAFT_MODE=true
KAFKA_PROCESS_ROLES=controller,broker
KAFKA_NODE_ID=1
KAFKA_CONTROLLER_QUORUM_VOTERS=1@${KAFKA_SW5_IP}:${KAFKA_INTERNAL_PORT}
KAFKA_LISTENERS=PLAINTEXT://${KAFKA_LISTENERS_IP}:${KAFKA_WORKERS_PORT},CONTROLLER://${KAFKA_LISTENERS_IP}:${KAFKA_INTERNAL_PORT}
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT,CONTROLLER:PLAINTEXT
KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT
KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://${KAFKA_SW5_IP}:${KAFKA_WORKERS_PORT}
KAFKA_LOG_DIRS=/var/lib/kafka/data
KAFKA_AUTO_CREATE_TOPICS_ENABLE=true
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
KAFKA_LOG_RETENTION_HOURS=168 # 7 days
KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS=0
CLUSTER_ID=YmNjYjkwMjUxZGI3OTUxY2Jj
KAFKA_VOLUME=/var/lib/kafka/data

# KAFDROP
KAFDROP_IMAGE=obsidiandynamics/kafdrop
KAFDROP_IMAGE_TAG=4.1.0
KAFDROP_RESTART_POLICY=always
KAFDROP_HOSTNAME=kafdrop
KAFDROP_CONTAINER_NAME=kafdrop
KAFDROP_PORT=9000
KAFKA_BROKERCONNECT=${KAFKA_SW5_IP}:${KAFKA_WORKERS_PORT}

# MINIO
MINIO_IMAGE=quay.io/minio/minio
MINIO_IMAGE_TAG=latest
MINIO_HOSTNAME=minio
MINIO_CONTAINER_NAME=minio
MINIO_ROOT_USER=minioadmin          
MINIO_ROOT_PASSWORD=minioadmin      
MINIO_SERVER_PORT=9000
MINIO_WEBUI_PORT=9001
MINIO_SERVER_URL=http://${MINIO_SW5_IP}:${MINIO_SERVER_PORT}
MINIO_TOP_LAYER_BUCKET=top-layer
MINIO_INTERMEDIATE_BUCKET=inter-layer
MINIO_BOTTOM_LAYER_BUCKET=bot-layer

# DNS BIND9
BIND9_IMAGE_TAG=9.18
BIND9_IMAGE=internetsystemsconsortium/bind9
BIND9_HOSTNAME=dns
BIND9_CONTAINER_NAME=dns
BIND9_RESTART_POLICY=always
BIND9_PORT_TCP=53
BIND9_PORT_UDP=53
BIND9_PORT_HOST=5454

DNS_COLLECTOR_CONTAINER_NAME=dns_collector

# PROXY
NGINX_IMAGE_TAG=alpine
NGINX_IMAGE=nginx
NGINX_HOSTNAME=proxy
NGINX_CONTAINER_NAME=proxy
NGINX_RESTART_POLICY=always
NGINX_PORT=80
NGINX_PORT_SSL=443

PROXY_COLLECTOR_CONTAINER_NAME=proxy_collector

# WEBSERVER
WEBSERVER_IMAGE_TAG=3.12-slim
WEBSERVER_IMAGE=python
WEBSERVER_HOSTNAME=webserver
WEBSERVER_CONTAINER_NAME=webserver
WEBSERVER_RESTART_POLICY=always
WEBSERVER_PORT=5000
WEBSERVER_HOST=0.0.0.0
WEBSERVER_DEBUG=1

WEB_COLLECTOR_CONTAINER_NAME=web_collector

# RYU
SDN_IMAGE_TAG=3.12-slim
SDN_IMAGE=python
SDN_RESTART_POLICY=always
SDN_HOSTNAME=ryu
SDN_CONTAINER_NAME=ryu
SDN_PORT=6633
SDN_HOST=0.0.0.0
SDN_PORT_REST_API=8080
SDN_REST_API_HOST=0.0.0.0

# OPENVSWITCH
OPENVSWITCH_iMAGE_TAG=20.04
OPENVSWITCH_IMAGE=ubuntu
OPENVSWITCH_SW1_HOSTNAME=sw1
OPENVSWITCH_SW1_CONTAINER_NAME=sw1
OPENVSWITCH_SW2_HOSTNAME=sw2
OPENVSWITCH_SW2_CONTAINER_NAME=sw2
OPENVSWITCH_SW3_HOSTNAME=sw3
OPENVSWITCH_SW3_CONTAINER_NAME=sw3
OPENVSWITCH_SW4_HOSTNAME=sw4
OPENVSWITCH_SW4_CONTAINER_NAME=sw4
OPENVSWITCH_SW5_HOSTNAME=sw5
OPENVSWITCH_SW5_CONTAINER_NAME=sw5